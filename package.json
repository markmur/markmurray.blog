    "rimraf": "^5.0.5",
    "sass-loader": "^13.3.2",
    "typescript": "^5.2.2",
    "xo": "^0.56.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "proseWrap": "always"
  },
  "xo": {
    "parser": "babel-eslint",
    "envs": [
      "browser",
      "node"
    ],
    "prettier": true,
    "space": true,
    "semi": true,
    "rules": {
      "camelcase": 0,
      "unicorn/filename-case": 0,
      "unicorn/no-process-exit": 0,
      "capitalized-comments": 0,
      "import/no-unassigned-import": 0,
      "unicorn/prefer-query-selector": 0,
      "react/prop-types": 0,
      "react/require-default-props": 0,
      "react/no-danger": 0,
      "react/jsx-fragments": 0,
      "no-unused-vars": 1,
      "import/no-unresolved": 1
    },
    "extends": [
      "xo-react",
      "xo-typescript"
    ],
    "plugins": [
      "react"
    ]
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "precommit": {
    "run": [
      "lint-staged"
    ]
  },
  "resolutions": {
    "graphql": "16.0.0"
  }
}
