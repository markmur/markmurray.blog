  "version": "0.1.0",
  "author": "Mark Murray",
  "license": "MIT",
  "scripts": {
    "start": "yarn develop",
    "clean": "rimraf .cache public",
    "build": "yarn clean && gatsby build",
    "develop": "yarn clean && gatsby develop",
    "serve": "gatsby serve",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@babel/preset-env": "^7.16.11",
    "@netlify/functions": "^0.10.0",
    "axios": "^0.24.0",
    "classnames": "^2.3.1",
    "date-fns": "^2.26.0",
    "disqus-react": "^1.1.2",
    "dotenv": "^10.0.0",
    "gatsby-plugin-image": "^2.10.1",
    "gatsby-plugin-web-vitals": "^1.0.3",
    "gatsby-source-graphql": "^4.6.0",
    "gatsby-source-shopify": "^6.6.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "netlify": "^10.0.0",
    "netlify-cms": "^2.10.179",
    "prismjs": "^1.25.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-entypo": "^1.3.0",
    "react-entypo-icons": "^1.4.1",
    "react-helmet": "^6.1.0",
    "react-icons": "^4.3.1",
    "react-masonry-css": "^1.0.16",
    "react-transition-group": "^4.4.2",
    "react-waypoint": "^10.1.0",
    "redux": "^4.1.2",
    "shopify-buy": "^2.14.0",
    "styled-components": "^5.3.3",
    "styled-system": "^5.1.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@netlify/plugin-gatsby": "^1.0.3",
    "@types/axios": "^0.14.0",
    "@types/node": "^16.11.10",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/shopify-buy": "^2.10.9",
    "@types/styled-components": "^5.1.15",
    "@types/styled-system": "^5.1.13",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-styled-components": "^2.0.1",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-xo": "^0.39.0",
    "eslint-config-xo-react": "^0.25.0",
    "eslint-config-xo-typescript": "^0.47.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "gatsby": "^4.6.0",
    "gatsby-plugin-google-analytics": "^4.2.0",
    "gatsby-plugin-google-fonts": "^1.0.1",
    "gatsby-plugin-netlify": "^4.0.0",
    "gatsby-plugin-offline": "^5.2.0",
    "gatsby-plugin-react-helmet": "^5.2.0",
    "gatsby-plugin-sharp": "^4.2.0",
    "gatsby-plugin-styled-components": "^5.2.0",
    "gatsby-plugin-typescript": "^4.2.0",
    "gatsby-remark-autolink-headers": "^5.2.0",
    "gatsby-remark-copy-linked-files": "^5.2.0",
    "gatsby-remark-images": "^6.2.0",
    "gatsby-remark-prismjs": "^6.2.0",
    "gatsby-remark-reading-time": "^1.1.0",
    "gatsby-remark-relative-images": "^2.0.2",
    "gatsby-source-filesystem": "^4.6.0",
    "gatsby-transformer-remark": "^5.6.0",
    "gatsby-transformer-sharp": "^4.6.0",
    "lint-staged": "^12.1.2",
    "lodash-webpack-plugin": "^0.11.6",
    "pre-commit": "^1.2.2",
    "prettier": "^2.5.1",
    "prettier-eslint": "^13.0.0",
    "rimraf": "^3.0.2",
    "sass-loader": "^12.3.0",
    "typescript": "^4.5.5",
    "xo": "^0.46.4"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "proseWrap": "always"
  },
  "xo": {
    "parser": "babel-eslint",
    "envs": [
      "browser",
      "node"
    ],
    "prettier": true,
    "space": true,
    "semi": true,
    "rules": {
      "camelcase": 0,
      "unicorn/filename-case": 0,
      "unicorn/no-process-exit": 0,
      "capitalized-comments": 0,
      "import/no-unassigned-import": 0,
      "unicorn/prefer-query-selector": 0,
      "react/prop-types": 0,
      "react/require-default-props": 0,
      "react/no-danger": 0,
      "react/jsx-fragments": 0,
      "no-unused-vars": 1,
      "import/no-unresolved": 1
    },
    "extends": [
      "xo-react",
      "xo-typescript"
    ],
    "plugins": [
      "react"
    ]
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "precommit": {
    "run": [
      "lint-staged"
    ]
  }
}
