{
  "name": "markmurray.blog",
  "description": "Mark Murray's Blog",
  "repository": {
    "url": "https://github.com/markmur/markmurray.blog"
  },
  "version": "0.1.0",
  "author": "Mark Murray",
  "license": "MIT",
  "scripts": {
    "start": "yarn develop",
    "clean": "rimraf .cache public",
    "build": "yarn clean && gatsby build",
    "develop": "yarn clean && gatsby develop",
    "serve": "gatsby serve",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@sentry/gatsby": "^6.8.0",
    "@stripe/stripe-js": "^1.15.1",
    "axios": "^0.21.4",
    "date-fns": "^1.30.1",
    "disqus-react": "^1.0.5",
    "dotenv": "^10.0.0",
    "gatsby-plugin-sass": "^2.0.11",
    "gatsby-source-graphql": "^3.13.0",
    "gatsby-source-stripe": "^3.2.2",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.11",
    "netlify-cms": "^2.6.1",
    "prismjs": "^1.23.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-entypo": "^1.3.0",
    "react-entypo-icons": "^1.4.1",
    "react-helmet": "^5.2.0",
    "react-icons": "^4.2.0",
    "react-waypoint": "^9.0.2",
    "stripe": "^8.161.0",
    "styled-components": "^4.1.3",
    "styled-system": "^5.1.5",
    "use-shopping-cart": "^2.4.3",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/node": "^16.3.0",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@types/react-icons": "^3.0.0",
    "@types/stripe": "^8.0.417",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-styled-components": "^1.10.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-xo": "^0.38.0",
    "eslint-config-xo-react": "^0.18.0",
    "eslint-config-xo-typescript": "^0.44.0",
    "eslint-plugin-react": "^7.12.4",
    "gatsby": "2.1.17",
    "gatsby-image": "^2.0.23",
    "gatsby-plugin-google-analytics": "^2.0.14",
    "gatsby-plugin-google-fonts": "^0.0.4",
    "gatsby-plugin-netlify": "^2.0.6",
    "gatsby-plugin-netlify-cms": "^3.0.9",
    "gatsby-plugin-offline": "^2.0.24",
    "gatsby-plugin-react-helmet": "^3.0.6",
    "gatsby-plugin-sharp": "^2.14.1",
    "gatsby-plugin-styled-components": "^3.0.6",
    "gatsby-plugin-typescript": "^3.13.0",
    "gatsby-remark-autolink-headers": "^2.0.14",
    "gatsby-remark-copy-linked-files": "^2.0.7",
    "gatsby-remark-images": "^3.0.1",
    "gatsby-remark-prismjs": "^3.2.4",
    "gatsby-remark-reading-time": "^1.0.1",
    "gatsby-remark-relative-images": "^0.2.1",
    "gatsby-source-filesystem": "^2.0.12",
    "gatsby-transformer-remark": "^2.2.5",
    "gatsby-transformer-sharp": "^2.12.0",
    "lint-staged": "^8.1.4",
    "lodash-webpack-plugin": "^0.11.4",
    "node-sass": "^4.0.0",
    "parcel-bundler": "^1.9.4",
    "pre-commit": "^1.2.2",
    "prettier": "^1.16.4",
    "prettier-eslint": "^8.8.2",
    "rimraf": "^2.6.2",
    "sass-loader": "^11.0.1",
    "typescript": "^4.4.3",
    "xo": "^0.44.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "proseWrap": "always"
  },
  "xo": {
    "parser": "babel-eslint",
    "envs": [
      "browser",
      "node"
    ],
    "prettier": true,
    "space": true,
    "semi": true,
    "rules": {
      "camelcase": 0,
      "unicorn/filename-case": 0,
      "unicorn/no-process-exit": 0,
      "capitalized-comments": 0,
      "import/no-unassigned-import": 0,
      "unicorn/prefer-query-selector": 0,
      "react/prop-types": 0,
      "react/require-default-props": 0,
      "react/no-danger": 0,
      "react/jsx-fragments": 0,
      "no-unused-vars": 1,
      "import/no-unresolved": 1
    },
    "extends": [
      "xo-react",
      "xo-typescript"
    ],
    "plugins": [
      "react"
    ]
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "git add",
      "xo"
    ]
  },
  "precommit": {
    "run": [
      "lint-staged"
    ]
  }
}
